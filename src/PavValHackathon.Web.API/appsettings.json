{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  
  "ApiSecurityConfig": {
    "AuthorityUri": "http://localhost:7777",
    "Issuer": "http://example",
    "RequireHttpsMetadata": false
  },
  
  "ConnectionStrings": {
    "write": "Server=(local);Initial Catalog=PavValHackathon;Persist Security Info=False;User ID=dev;Password=dev;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=True;Connection Timeout=30;"
  },
  
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Default": "Information",
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Enrich": [
      "WithThreadId",
      "FromLogContext",
      "WithCorrelationId",
      "WithMachineName"
    ],

    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate":
          "{Timestamp:yyyy-MM-dd HH:mm:ss,fff} ({ThreadId}) [{Level}] CorrelationId={CorrelationId} {Message:l}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "d:\\home\\LogFiles\\rawLogs\\PavValHackathon.Web.log",
          "rollingInterval": "Day",
          "shared": "true",
          "flushToDiskInterval": "0:00:02",
          "outputTemplate":
          "{Timestamp:yyyy-MM-dd HH:mm:ss,fff} ({ThreadId}) [{Level}] CorrelationId={CorrelationId} {Message:l}{NewLine}{Exception}"
        }
      }
    ]
  }
}
